<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

<session-factory>
	<property name="hibernate.hbm2ddl.auto">update</property>
	<property name="format_sql">true</property>
	<!-- 数据库连接信息 -->
	<!-- org.hibernate.dialect.MySQLDialect -->
	<!-- 使用下面方言，默认生成InnoDB引擎数据库表 -->
	<property name="dialect">
		org.hibernate.dialect.MySQLInnoDBDialect
	</property>
	<property name="connection.url">
		jdbc:mysql://localhost:3306/fishshop
	</property>
	<property name="connection.username">root</property>
	<property name="connection.password">root</property>
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<!-- Hibnerate自身的配置信息 -->
	<property name="show_sql">true</property>
	<!-- 关闭Hibernate基于注解的验证,默认在Hibernate3.6和以后的版本提供的此功能,而且此功能必须要在J2EE6.0.jar 
		之上 -->
	<!-- JSR 303：基于注解的Java Bean验证 -->
	<property name="javax.persistence.validation.mode">none</property>
	<!-- 是否开启二级缓存 -->
	<property name="cache.use_second_level_cache">true</property>
	<!-- 指定二级缓存的提供商 org.hibernate.cache.EhCacheProvider 此类并不是二级缓存实现类,而是用来加载缓存.jar包桥接类 -->
	<!-- 
		<property name="hibernate.cache.provider_class">
		org.hibernate.cache.EhCacheProvider
		</property>
	-->
	<!-- 映射文件 -->
	<mapping resource="com/earl/fishshop/pojo/CategoryPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/CommentPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/FarmersPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/FishmanPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/GoodsPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/OrdersPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/SeaRecordPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/ShopPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/SkuPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/SordersPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/UnitPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/UserPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/GetTypePo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/CheckoutPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/ShipPortPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/FordersPo.hbm.xml" />
	<mapping resource="com/earl/fishshop/pojo/OrdersDetailPo.hbm.xml" />
</session-factory>
</hibernate-configuration>